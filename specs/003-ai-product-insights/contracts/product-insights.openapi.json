{
  "openapi": "3.1.0",
  "info": {
    "title": "Product Insights API",
    "version": "1.0.0",
    "description": "API for retrieving AI-generated product insights. Insights are generated on-demand and not cached."
  },
  "servers": [
    {
      "url": "/api",
      "description": "BFF API base path"
    }
  ],
  "paths": {
    "/products/{id}": {
      "get": {
        "summary": "Get product detail with optional AI insights",
        "description": "Retrieves product detail. AI insights are included when available. If AI service is unavailable, product detail is still returned without insights.",
        "operationId": "getProductDetail",
        "tags": ["Products"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Product identifier"
          }
        ],
        "responses": {
          "200": {
            "description": "Product detail with optional AI insights",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductDetailResponse"
                },
                "examples": {
                  "withInsights": {
                    "summary": "Product with AI insights available",
                    "value": {
                      "product": {
                        "id": "MLA123456789",
                        "title": "iPhone 14 Pro",
                        "price": 999,
                        "condition": "new"
                      },
                      "aiInsights": {
                        "summary": "The iPhone 14 Pro is a premium smartphone with exceptional camera capabilities and powerful performance. It features the latest A16 chip and a stunning ProMotion display.",
                        "pros": [
                          "Excellent camera quality with ProRAW support",
                          "Long battery life with optimized power management",
                          "Powerful A16 Bionic chip for smooth performance"
                        ],
                        "cons": [
                          "Higher price point compared to competitors",
                          "Limited storage options in base model"
                        ],
                        "recommendedFor": [
                          "Photography enthusiasts",
                          "Users who prioritize performance"
                        ]
                      }
                    }
                  },
                  "withoutInsights": {
                    "summary": "Product without AI insights (service unavailable)",
                    "value": {
                      "product": {
                        "id": "MLA123456789",
                        "title": "iPhone 14 Pro",
                        "price": 999,
                        "condition": "new"
                      },
                      "aiInsights": null
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Product not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProductDetailResponse": {
        "type": "object",
        "required": ["product"],
        "properties": {
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "aiInsights": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/ProductInsights"
              },
              {
                "type": "null"
              }
            ],
            "description": "AI-generated insights. null if unavailable (service error, timeout, rate limit, etc.)"
          }
        }
      },
      "Product": {
        "type": "object",
        "description": "Product entity (existing structure)",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "condition": {
            "type": "string"
          }
        }
      },
      "ProductInsights": {
        "type": "object",
        "required": ["summary", "pros", "cons"],
        "properties": {
          "summary": {
            "type": "string",
            "description": "Brief natural language description (2-4 sentences)",
            "minLength": 50,
            "maxLength": 500
          },
          "pros": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of product strengths (1 short phrase each)",
            "minItems": 1
          },
          "cons": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of product weaknesses/trade-offs (1 short phrase each)",
            "minItems": 1
          },
          "recommendedFor": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Optional array of 1-3 user types or use cases",
            "minItems": 1,
            "maxItems": 3
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "message": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
